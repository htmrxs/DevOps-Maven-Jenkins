pipeline {
    agent any

    stages {
        stage ('Compile Stage') {
            def = mvnHome = tool name: 'maven 3.6.3', type: 'maven'
            sh "${mvnHome}/bin/mvn package"
            steps {
                withMaven(maven : 'maven_3_5_0') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven : 'maven_3_5_0') {
                    sh 'mvn test'
                }
            }
        }


        stage ('Deployment Stage') {
            steps {
                withMaven(maven : 'maven_3_5_0') {
                    sh 'mvn deploy'
                }
            }
        }
    }
}